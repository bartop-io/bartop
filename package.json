{
  "name": "bartop",
  "version": "0.0.1",
  "description": "Web framework for hobbyist and freelance bartenders",
  "scripts": {
    "install": "concurrently 'cd client && npm install' 'cd server && npm install'",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "database": "cd server && npm run database",
    "start": "concurrently 'npm run server' 'npm run client'",
    "test-server": "cd server && npm test",
    "test-client": "cd client && CI=true npm test",
    "test": "concurrently 'npm run test-server' 'npm run test-client'",
    "test-all": "concurrently 'cd server && npm run test-all' 'npm run test-client'",
    "lint-server": "cd server && npm run lint",
    "lint-client": "cd client && npm run lint && npm run lint:css",
    "lint": "concurrently 'npm run lint-server' 'npm run lint-client'",
    "precommit": "npm run lint && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dpopp07/bartop.git"
  },
  "keywords": [
    "bartop"
  ],
  "author": "Dustin Popp",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^3.5.0",
    "husky": "^0.14.3"
  }
}
