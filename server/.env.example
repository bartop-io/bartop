# DO NOT MODIFY
# Rather, create a separate file called `.env`
# and set these variables to suit your environment

# environment: development

##### Set variables relevant to the API #####

# the port the API server will be listening on
API_PORT=3001


##### Set variables relevant to the database #####

# the host name of the db instance. use 'localhost' for development
DB_HOST=localhost

# the port the database will be listening for connections on
DB_PORT=28015

# the name of the specific database to connect to
DB_NAME=bartop_dev
